{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "chrome"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/scripts/background.ts",
    "src/scripts/content.ts",
    "src/scripts/mappingCreator.ts",
    "src/pages/popup/popup.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}